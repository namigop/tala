<controls:MetroWindow
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:local="clr-namespace:WcfStorm.Tala;assembly=WcfStorm.Tala"
    xmlns:avalonEdit="clr-namespace:ICSharpCode.AvalonEdit;assembly=ICSharpCode.AvalonEdit"
    xmlns:fsxaml="clr-namespace:FsXaml;assembly=FsXaml.Wpf"
    TitlebarHeight="40"
    Title="WcfStorm Tala Community Edition"
    Height="600" MinWidth="1200" Width="1200"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    Background="{StaticResource DefaultBackground}"
    Style="{DynamicResource CleanWindowStyleKey}"
    ResizeMode="CanResizeWithGrip"
    GlowBrush="{DynamicResource AccentColorBrush}"
    
    >
    <controls:MetroWindow.Resources>
         </controls:MetroWindow.Resources>
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>
    <controls:MetroWindow.LeftWindowCommands>
        <controls:WindowCommands>
            <Button Command="{Binding SendCommand}">
                <StackPanel Orientation="Horizontal">
                    <StackPanel.Resources>
                        <SolidColorBrush Color="Green" x:Key="FillColor" />
                    </StackPanel.Resources>
                    <ContentControl Content="{StaticResource icon_play}" Width="24" Height="24" />
                    <TextBlock Text="send"  VerticalAlignment="Center" />
                </StackPanel>
            </Button>
            <Button Content="cookies" />
            <Button>
                <StackPanel Orientation="Horizontal">
                    <ContentControl Content="{StaticResource icon_gear}" Width="24" Height="24" />
                    <TextBlock Text="settings" VerticalAlignment="Center" />
                </StackPanel>
            </Button>
            <Button>
                <StackPanel Orientation="Horizontal">
                    <StackPanel.Resources>
                        <SolidColorBrush Color="DarkGoldenrod" x:Key="FillColor" />
                    </StackPanel.Resources>
                    <ContentControl Content="{StaticResource icon_script}" Width="24" Height="24" />
                    <TextBlock Text="script" VerticalAlignment="Center" />
                </StackPanel>
            </Button>
            <ComboBox Width="77">
                <ComboBoxItem Content="GET" IsSelected="True" />
                <ComboBoxItem Content="POST" />
                <ComboBoxItem Content="PUT" />
                <ComboBoxItem Content="DELETE" />
            </ComboBox>
        </controls:WindowCommands>
    </controls:MetroWindow.LeftWindowCommands>

    <controls:MetroWindow.RightWindowCommands>
        <controls:WindowCommands>
            <Button>
                <StackPanel Orientation="Horizontal">
                    <ContentControl Content="{StaticResource icon_help}" Width="16" Height="16" />
                </StackPanel>
            </Button>
            <!--ToggleButton Content="ToggleButton" />-->
        </controls:WindowCommands>
    </controls:MetroWindow.RightWindowCommands>

    <Grid Background="#293955">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Background="#293955" Margin="5">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--Right bar Actions-->
            <!--
        <StackPanel Orientation="Vertical" Grid.Column="0">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="5" />
                </Style>
            </StackPanel.Resources>
            <Button Content="SN" />
            <Button Content="AC" />
        </StackPanel>-->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--URL -->
                <ComboBox x:Name="urlBox" Grid.Row="0" Background="White" ItemsSource="{Binding Urls}" SelectedIndex="0"
                          SelectedItem="{Binding TargetUrl}" >
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel.Resources>
                                    <SolidColorBrush Color="SkyBlue" x:Key="FillColor" />
                                </StackPanel.Resources>
                                <ContentControl Content="{StaticResource icon_globe}" Width="16" Height="16" Background="WhiteSmoke" Margin="2" />
                                <TextBlock Text="{Binding Url}" VerticalAlignment="Center" HorizontalAlignment="Stretch"
                                         Visibility="{Binding IsNotSelected, Converter={StaticResource BooleanToVisibilityConverter }}"
                                         Width="{Binding ElementName=urlBox, Path=ActualWidth}"/>
                                <TextBox Text="{Binding Url}" VerticalAlignment="Center" HorizontalAlignment="Stretch"
                                        Visibility="{Binding IsSelected, Converter={StaticResource BooleanToVisibilityConverter }}"
                                         Width="{Binding ElementName=urlBox, Path=ActualWidth}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                    <!--<ComboBox.Template>
                        <ControlTemplate>
                            <DockPanel  >
                                <DockPanel.Resources>
                                    <SolidColorBrush Color="White" x:Key="FillColor" />
                                </DockPanel.Resources>
                                <ContentControl Content="{StaticResource icon_globe}" Width="24" Height="24" Background="WhiteSmoke" Margin="5" />
                                <TextBox Text="http://" VerticalAlignment="Center" HorizontalAlignment="Stretch" />
                            </DockPanel>
                        </ControlTemplate>
                    </ComboBox.Template>-->
                </ComboBox>

                <!--Request / Response -->
                <Grid Grid.Row="1" Margin="0,3,0,0">
                    <Grid.Resources>
                        <Style TargetType="GridSplitter">
                            <Setter Property="Background" Value="LightGray" />
                        </Style>
                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <GridSplitter Grid.Column="1" Width="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                    <!--Request Grid -->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <GridSplitter Grid.Row="1" Height="4" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                        <!--HTTP Header-->
                        <Grid Grid.Row="0" Background="WhiteSmoke" >
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0"  Background="#CFD6E5">
                                    <Label Content="HTTP Headers" FontSize="14" FontWeight="SemiBold" />
                                </Border>
                                <ListBox ItemsSource="{Binding Headers}" Grid.Row="1" Margin="0,0,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="2*" />
                                                </Grid.ColumnDefinitions>
                                                <TextBox Text="{Binding Key}" Grid.Column="0" />
                                                <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                                                <TextBox Text="{Binding Value}" Grid.Column="2" />
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                                <Button Grid.Row="2" HorizontalAlignment="Left" Margin="5" Command="{Binding AddRequestHeaderCommand}">
                                    <StackPanel Orientation="Horizontal">
                                        <StackPanel.Resources>
                                            <SolidColorBrush Color="SkyBlue" x:Key="FillColor" />
                                        </StackPanel.Resources>
                                        <ContentControl Content="{StaticResource icon_plus}" Width="16" Height="16" />
                                        <TextBlock Text="add" VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button>
                                <Border Grid.Row="3" />
                            </Grid>
                        </Grid>
                        <!--HTTP Request-->
                        <Grid Grid.Row="2" Background="WhiteSmoke">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0"  Background="#CFD6E5">
                                <Label Content="Request" FontSize="14" FontWeight="SemiBold" />
                            </Border>
                            <avalonEdit:TextEditor Grid.Row="1" Name="textEditorRequest" FontFamily="Consolas" FontSize="9pt" 
                                                   SyntaxHighlighting="{Binding Request.Highlighting}"
                                                   Document="{Binding Request.Doc}"/>
                        </Grid>
                    </Grid>

                    <!--Response Grid -->
                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <!--<GridSplitter Grid.Row="1" Height="4" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />-->
                        <!--HTTP Header-->
                        <Grid Grid.Row="0" Background="WhiteSmoke" Grid.RowSpan="3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0"  Background="#CFD6E5">
                                <Label Content="Response" FontSize="14" FontWeight="SemiBold" />
                            </Border>
                            <avalonEdit:TextEditor Grid.Row="1" Name="textEditorResponse" FontFamily="Consolas" FontSize="9pt" 
                                                   SyntaxHighlighting="{Binding Response.Highlighting}"
                                                   Document="{Binding Response.Doc}"/>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <!--Status Bar-->
        <StatusBar Grid.Row="1" Grid.ColumnSpan="2" Background="#007ACC" Margin="0">
            <StatusBar.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="Foreground" Value="White" />
                </Style>
            </StatusBar.Resources>
            <StatusBarItem HorizontalAlignment="Left">
                <TextBlock Text="Copyright : Erik Araojo, 2015" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding StatusMessage}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</controls:MetroWindow>